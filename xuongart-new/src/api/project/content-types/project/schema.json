{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Project content type"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "categories": {
      "type": "json"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer"
    },
    "media": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "duration": {
      "type": "decimal"
    },
    "orientation": {
      "type": "enumeration",
      "enum": [
        "landscape",
        "portrait"
      ],
      "default": "landscape"
    },
    "fullDescription": {
      "type": "blocks"
    },
    "completionDate": {
      "type": "date"
    },
    "thumbnail": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
